<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->

<% flat = data.flats[owner] %>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%=flat.city_slug%>');">
    <h1><%= flat.description %></h1>
</div>

<!-- Inject flat data in template -->

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="header-flat">
        <div class="header-flat-owner text-center">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class:"img-circle"%>
          <p><%= owner %></p>
        </div>
        <div class="header-flat-details">
          <h6><strong><%= flat.description %></strong></h6>
          <p><%= flat.city_name %></p>
          <p class="rating list-inline">
            <% flat.rating.times do %>
              <i class="fa fa-star" style="color: #ffb400"></i>
            <%end%>
            <% (5 - flat.rating).times do %>
              <i class="fa fa-star" style="color: #a5a4a4"></i>
            <%end%>
          </p>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
        <form action="#">
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
        </form>
      </div>
  </div>
  <div id="flat-description">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this flat</h2>
        <p>
          <%=flat.about%>
        </p>

        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            <h6>The Space</h6>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accommodates:  <strong><%=flat.accomodates%></strong></li>
              <li>Bathrooms:  <strong><%=flat.bathrooms%></strong></li>
              <li>Bed type:  <strong><%=flat.bed_type%></strong></li>
              <li>Bedrooms:  <strong><%=flat.bedrooms%></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Beds: <strong><%=flat.beds%></strong></li>
              <li>Property type: <strong><%=flat.property_type%></strong></li>
              <li>Room type: <strong><%=flat.room_type%></strong></li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            <h6>Amenities</h6>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>
               <% if flat.kitchen ==true%>
                <i class="fa fa-cutlery"></i><strong>Kitchen</strong></li>
                <%end%>
                <li>
                <% if flat.wifi ==true%>
                <i class="fa fa-wifi"></i><strong>Wifi</strong></li>
                <%end%>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <% if flat.tv ==true%>
                <li><i class="fa fa-desktop"></i><strong>TV</strong></li>
              <%end%>
              <% if flat.welcome_drink ==true%>
                <li><i class="fa fa-glass"></i><strong>Welcome drink</strong></li>
              <%end%>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
